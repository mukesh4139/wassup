<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Wassup</title>
    <link rel="stylesheet" href="<%= Routes.static_path(@conn, "/css/app.css") %>"/>
  </head>
  <body>
    <header>
      <section class="container">
        <nav role="navigation">
          <ul>
            <li>
              <%= if @current_user do %>
                (<%= @current_user.email %>) <%= link "Logout", to: Routes.logout_path(@conn, :delete), method: :delete %>
              <% end %>
            </li>
          </ul>
        </nav>
        <h1>Wassup!</h1>
      </section>
    </header>
    <main role="main" class="container">
      <p class="alert alert-info" role="alert"><%= get_flash(@conn, :info) %></p>
      <p class="alert alert-danger" role="alert"><%= get_flash(@conn, :error) %></p>
      <%= render @view_module, @view_template, assigns %>
    </main>
    <script>
      var App = window.App = {};
      App.sentimentDetails = <%= raw sentiment_details() %>;
      App.userToken = "<%= assigns[:user_token] %>";
      App.userId = "<%= assigns[:current_user] && assigns[:current_user] |> Map.get(:id) %>";
      window.App = App;
    </script>
    <script type="text/javascript" src="<%= Routes.static_path(@conn, "/js/app.js") %>"></script>
  </body>
</html>
